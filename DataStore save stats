--------------- Server Script: game.ServerScriptService

local DataStore = game:GetService("DataStoreService")

local ds = DataStore:GetDataStore("LeaderStatSave") -- Name of datastore

game.Players.PlayerAdded:Connect(function(player)
	local success, error = pcall(function()
		local leader = Instance.new(`Folder`, player)
		leader.Name = "leaderstats" 
		
		local Cash = Instance.new("IntValue",leader) -- intvalue cannot contain numbers like: 1.1, 1.2, 1.3, 1.4, 1.5 etc. (if you want it to contain use NumberValue instead)
		Cash.Name = `Touch` -- name of stat
		Cash.Value = 5
		Cash.Value = ds:GetAsync(player.UserId) or 5 --if error (player joined for the first time), sets to 5. else sets to saved value
		
	end)
	
end)

game.Players.PlayerRemoving:Connect(function(player)
	local success, error = pcall(function()
		ds:SetAsync(player.UserId, player.leaderstats.Touch.Value) --[[
		change "Touch" to real stat, and dont forget you can store tables {} instead of just one value ]] 
	end)
end)

---------------END-------------
